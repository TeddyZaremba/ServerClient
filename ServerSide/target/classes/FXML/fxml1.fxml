<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller = "ServerController" fx:id = "root">
    <HBox fx:id = "hBox1" styleClass = "hboxstartup">
        <VBox fx:id = "vBox2">
            <TextField fx:id = "portNumBox" text = "Enter a port number" styleClass="textfield"> </TextField>
            <Button fx:id = "startButton" text = "Start" styleClass="button" onAction = "#setPortNumber"> </Button>
        </VBox>
        <VBox fx:id = "vBox3">
            <Text fx:id = "state" text = "State" styleClass="text"> </Text>
            <Text fx:id = "numClientsBox" text = "# Clients" styleClass="text"> </Text>
        </VBox>
    </HBox >
    <VBox fx:id = "vBox4">
        <HBox fx:id = "hBox2" styleClass = "hboxscoreboard">
            <Text fx:id = "player1" text = "Player 1" styleClass="text"> </Text>
            <Text fx:id = "play1" text = "Waiting on player 1" styleClass="text"> </Text>
            <Text fx:id = "score1" text = "0 points" styleClass="text"> </Text>
            <Text fx:id = "winner1" text = "Round Not Finished" styleClass="text"> </Text>
            <Text fx:id = "playAgain1" text = "N/A" styleClass="text"> </Text>
        </HBox>
        <HBox fx:id = "hBox3" styleClass = "hboxscoreboard">
            <Text fx:id = "player2" text = "Player 2" styleClass="text">> </Text>
            <Text fx:id = "play2" text = "Waiting on player 2" styleClass="text">> </Text>
            <Text fx:id = "score2" text = "0 points" styleClass="text">> </Text>
            <Text fx:id = "winner2" text = "Round Not Finished" styleClass="text">> </Text>
            <Text fx:id = "playAgain2" text = "N/A" styleClass="text">> </Text>
        </HBox>
        <ListView fx:id= "listview1"/>
    </VBox>
</VBox>
